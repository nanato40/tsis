<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pichau.tsis.DeleteContratoActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="TextView"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnPdf"
            android:layout_alignStart="@+id/btnPdf"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/txvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txvStatus"
            android:layout_alignStart="@+id/txvStatus"
            android:layout_below="@+id/txvStatus"
            android:layout_marginTop="21dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txvTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="TextView"
            android:layout_below="@+id/txvData"
            android:layout_alignLeft="@+id/txvData"
            android:layout_alignStart="@+id/txvData" />

        <Button
            android:id="@+id/btnDeleteContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deletar"
            android:layout_below="@+id/btnPdf"
            android:layout_alignLeft="@+id/btnPdf"
            android:layout_alignStart="@+id/btnPdf"
            android:layout_alignRight="@+id/btnPdf"
            android:layout_alignEnd="@+id/btnPdf" />

        <Button
            android:id="@+id/btnPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txvTipo"
            android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp"
            android:layout_marginTop="39dp"
            android:text="Baixar PDF" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
