<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.pichau.tsis.CadastroActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.pichau.tsis.CadastroActivity">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lValorPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <EditText
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="* Nome"
                android:maxLength="50"
                android:drawableLeft="@drawable/account"
                android:clickable="true"
                android:cursorVisible="false"
                android:layout_weight="1" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lValorPedido2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">



            <TextView
                android:text="* Sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/spnTipo"
                android:id="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18dp"
                android:layout_alignStart="@+id/spinnerSexo"
                android:layout_alignLeft="@+id/spinnerSexo"
                android:textAppearance="@style/TextAppearance.AppCompat"
                 />

            <Spinner
                android:id="@+id/spinnerSexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtNome"
                android:layout_alignLeft="@+id/txtNome"
                android:layout_alignRight="@+id/txtNome"
                android:layout_alignStart="@+id/txtNome"
                android:layout_below="@+id/txtNome"
                android:layout_marginTop="5dp"
                android:layout_weight="0.60"
                android:spinnerMode="dialog" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lValorPedido3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:drawableLeft="@drawable/email"
                android:hint="* E-mail"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lValorPedido24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <EditText
                android:id="@+id/txtConfirmaEmail"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"

                android:drawableLeft="@drawable/email"
                android:hint="* Confirma E-mail"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="180dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lValorPedido34"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <EditText
                android:id="@+id/txtSenha"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/lock"
                android:hint="*Senha"
                android:inputType="textPassword"
                android:layout_weight="1" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lValorPedido244"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <EditText
                android:id="@+id/txtConfirmaSenha"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/lock"
                android:layout_height="61dp"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="* Confirma Senha"
                android:layout_weight="1" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="220dp"
        android:id="@+id/linearLayout3">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lValorPedido343"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:text="* Seção"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/spinnerSecao"
                android:id="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="55dp"
                android:layout_alignStart="@+id/spinnerSecao"
                android:layout_alignLeft="@+id/spinnerSecao"
                android:textAppearance="@style/TextAppearance.AppCompat"
                />

            <Spinner
                android:id="@+id/spinnerSecao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNome"
                android:layout_alignLeft="@+id/txtNome"
                android:layout_alignStart="@+id/txtNome"
                android:layout_alignRight="@+id/txtNome"
                android:layout_marginTop="13dp"
                android:layout_alignEnd="@+id/txtNome" />
        </android.support.design.widget.TextInputLayout>




    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="285dp"
        android:id="@+id/linearLayout2">


        <View
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:layout_weight="0.2"/>


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="320dp"
        android:id="@+id/linearLayout23"
        android:weightSum="1">

        <com.dd.CircularProgressButton
            android:id="@+id/btnCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="46dp"

            android:textColor="@color/cpb_white"

            app:cpb_cornerRadius="5dp" />

        <com.dd.CircularProgressButton
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_alignTop="@+id/btnCadastrar"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_toEndOf="@+id/btnCadastrar"
            android:layout_toRightOf="@+id/btnCadastrar"
            android:layout_marginTop="45dp"

            android:textColor="@color/cpb_white"
            app:cpb_cornerRadius="5dp"
            android:layout_weight="0.35" />

    </LinearLayout>

</RelativeLayout>
    </ScrollView>
