<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:weightSum="1"
    android:orientation="vertical">




        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txvStatus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_marginRight="39dp"
                    android:layout_marginEnd="39dp"
                    android:layout_alignTop="@+id/pdf"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/txvData"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_above="@+id/txvTipo"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignLeft="@+id/txvStatus"
                    android:layout_alignStart="@+id/txvStatus" />

                <TextView
                    android:id="@+id/txvTipo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_alignBottom="@+id/imageViewStatus"
                    android:layout_alignLeft="@+id/txvData"
                    android:layout_alignStart="@+id/txvData" />

                <ImageView
                    android:id="@+id/imageViewStatus"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="21dp"
                    android:paddingRight="25dp"
                    app:srcCompat="@drawable/nuvem"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:id="@+id/pdf"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    app:srcCompat="@drawable/pdf"
                    android:layout_alignTop="@+id/imageViewStatus"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    app:srcCompat="@drawable/delete"
                    android:layout_below="@+id/pdf"
                    android:layout_alignLeft="@+id/pdf"
                    android:layout_alignStart="@+id/pdf" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txvStatus"
                    android:layout_toRightOf="@+id/imageViewStatus"
                    android:text="Status:" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txvTipo"
                    android:layout_toEndOf="@+id/imageViewStatus"
                    android:layout_toRightOf="@+id/imageViewStatus"
                    android:text="Data:" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView8"
                    android:layout_toEndOf="@+id/imageViewStatus"
                    android:layout_toRightOf="@+id/imageViewStatus"
                    android:text="Tipo:" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>



</LinearLayout>
